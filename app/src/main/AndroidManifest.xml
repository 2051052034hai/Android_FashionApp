<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.fashion_app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fashion_App"
        tools:targetApi="31">

        <!-- Mô tả ứng dụng -->
        <meta-data
            android:name="android:description"
            android:value="@string/app_description" />

        <!-- Activity chính -->
        <activity
            android:name="com.example.fashion_app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Định nghĩa thêm các activity, service, receiver, provider nếu cần - Begin Add-->
        <activity
            android:name="com.example.fashion_app.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fashion_app.CartActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fashion_app.ProductListActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fashion_app.AddProduct"
            android:exported="true" />
        <activity
            android:name="com.example.fashion_app.LoginActivity"
            android:exported="true" />
        <activity
            android:name="com.example.fashion_app.RegisterActivity"
            android:exported="true" />

        <activity android:name=".ForgotPasswordActivity"></activity>

        <!-- Định nghĩa thêm các activity, service, receiver, provider nếu cần - End Add-->
    </application>
</manifest>
